@model IEnumerable<HR_Management.Web.ViewModels.CompanyViewModel>

@{ 
    Layout = "~/Areas/TOIManagement/Views/Shared/_Layout.cshtml";
}
<div class="box-inner">
    <div class="box-content">
        <h2>Companyies List</h2>
        <hr />
        <p id="MessageToClient" class="text-danger"></p>
        <p class="text-danger">@TempData["MessageToClient"]</p>
        <div id="getEmployeeData"></div>

        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.ActionLink("Create Company", "Create")
            </div>
            <div class="panel-body">
                <div class="dataTables_wrapper">
                    <table class="table table-hover table-striped table-condensed table-bordered table-responsive " id="dataTable">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.CompanyName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Address)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.City)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.State)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ZipCode)
                            </th>
                            <th>
                                @Html.ActionLink("Create New", "Create")
                            </th>
                        </tr>

                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CompanyName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.City)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.State)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ZipCode)
                            </td>
                            <td>
                                @Html.ActionLink(" ", "Edit", "Employees", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil" }) |
                                @Html.ActionLink(" ", "Details", "Employees", new { id = item.Id }, new { @class = "glyphicon glyphicon-zoom-in" }) |
                                @Html.ActionLink(" ", "Delete", "Employees", new { id = item.Id }, new { @class = "glyphicon glyphicon-remove" })
                            </td>
                        </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

