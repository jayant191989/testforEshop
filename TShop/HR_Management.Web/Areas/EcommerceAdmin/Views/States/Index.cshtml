@model IEnumerable<EyePolice.Model.Models.State>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function () {
        $('#example2').DataTable({
            responsive: true,
            "iDisplayLength": 10,
            "searching": true
        });
    });
</script>
<section class="content">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">States </h3>
            <div class="pull-right">
                
                @Html.ActionLink("Add", "Create", "States", new { @class = "btn btn-primary btn-xs custombackbutton" })
            </div>
            <hr />
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="example2" class="table table-hover table-striped table-condensed table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Country.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Code)
                        </th>
                        <th class="">
                           Action
                        </th>
                    </tr>
                </thead>


                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Country.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</section>
