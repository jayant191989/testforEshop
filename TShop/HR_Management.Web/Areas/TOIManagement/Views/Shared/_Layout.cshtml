</head>
<body>
    @Html.Partial("_Navbar_Top_Admin")
    <div class="ch-container">
        <div class="row">
            @Html.Partial("_Navbar_Sidebar_Admin")
            <div id="content" class="col-lg-10 col-sm-10">
                @RenderBody()
            </div>
        </div>
    </div>
    <hr />
    <footer class="row">
        <p class="col-md-9 col-sm-9 col-xs-12 copyright">
            &copy; <a href="http://www.templeofiron.com" target="_blank">
                Temple Of Iron
            </a> - @DateTime.Now.Year
        </p>
        <p class="col-md-3 col-sm-3 col-xs-12 powered-by">
            Powered by: <a href="http://www.shadesofweb.com">ShadesOfWeb</a>
        </p>
    </footer>

    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.buttons.min.js"></script>
    <script src="~/Scripts/DataTables/buttons.flash.min.js"></script>
    <script src="~/Scripts/jszip.min.js"></script>
    <script src="~/Scripts/pdfmake.min.js"></script>
    <script src="~/Scripts/vfs_fonts.js"></script>
    <script src="~/Scripts/DataTables/buttons.html5.min.js"></script>
    <script src="~/Scripts/DataTables/buttons.print.min.js"></script>
    <script src="~/Content/bootstrap-toggle-master/js/bootstrap-toggle.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Content/summernote-0.8.2-dist/summernote.min.js"></script>
    @*<script src="~/Scripts/ckeditor/ckeditor.js"></script>*@
    <script src="~/Scripts/toastr.min.js"></script>
    <script>
        function showNotification(message, type) {
            toastr.options = {
                "closeButton": true,
                "positionClass": "toast-top-right",
                "timeOut": "10000"
            };
            switch (type) {
                case 'success':
                    toastr.success(message);
                    break;
                case 'failed':
                    toastr.error(message);
                    break;
                case 'warning':
                    toastr.warning(message);
                    break;
            }
        }
    </script>
    <script src="~/Content/charisma-master/js/charisma.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
