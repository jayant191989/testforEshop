@model IEnumerable<HR_Management.Models.LogEntry>

<div id="content" class="col-lg-10 col-sm-10">  
    <p id="MessageToClient" class="text-danger"></p>
    <p class="text-danger">@TempData["MessageToClient"]</p>
    @*<h2>Audit Trail</h2>
    <hr />*@
    <div class="panel panel-default">
        <div class="panel-heading">
         Audit Log
        </div>

        <div class="panel-body">
            <table class="table table-hover table-striped table-condensed table-bordered table-responsive " id="dataTables-example">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.LogDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LogLevel)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Message)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                <tr>
                    <td class="text-nowrap">
                        @Html.DisplayFor(modelItem => item.LogDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LogLevel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Message)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", "LogEntries", new { id = item.LogEntryID }, new { @class = "btn btn-default btn-xs" })
                    </td>
                </tr>
                }

            </table>
        </div>
    </div>
</div>

