@model IEnumerable<HR_Management.Models.Attendence>

@{
    Layout = "~/Areas/TOIManagement/Views/Shared/_Layout.cshtml";
}

<div class="box-inner">
    <div class="box-content">
        <h2>Attendence</h2>
        <hr />
        <p id="MessageToClient" class="text-danger"></p>
        <p class="text-success">@TempData["MessageToClientSuccess"]</p>
        <p class="text-danger">@TempData["MessageToClientError"]</p>
        <div id="getEmployeeData"></div>
        <div class="panel-body">
            <table class="table table-striped table-hover table-bordered">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.ActionLink("Create Attendence", "Create", null, new { @class = "btn btn-primary btn-xs" })
                    </th>
                </tr>

                @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date, "VeryLongDate")
                        </td>
                        <td>
                            @Html.ActionLink("Mark Attendence", "Edit", new { id = item.Id }, new { @class = "btn btn-default btn-xs" }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                    }

            </table>
        </div>
    </div>
</div>
