@model IEnumerable<HR_Management.Web.ViewModels.StoreProductsViewModel>

<script>
    $(document).ready(function () {
        $('#example2').DataTable({
            aaSorting: [],
            "iDisplayLength": 50,
            dom: 'Bfrtip',
            //buttons: [
            //    'copy', 'csv', 'excel', 'pdf', 'print'
            //],
            buttons: [
            {
                extend: 'copy',
                exportOptions: {
                    columns: [0, 1, 2, 3]
                }
            },
                {
                    extend: 'csv',
                    exportOptions: {
                        columns: [0, 1, 2, 3]
                    }
                },
                {
                    extend: 'excel',
                    exportOptions: {
                        columns: [0, 1, 2, 3]
                    }
                },
                {
                    extend: 'pdf',
                    exportOptions: {
                        columns: [0, 1, 2, 3, 4]
                    }
                },
                {
                    extend: 'print',
                    exportOptions: {
                        columns: [0, 1, 2, 3]
                    }
                }
            ],
            responsive: true,            
            "searching": true,
            bSortable: true
        });
    });
</script>
<div class="pull-right">
    @Html.ActionLink("Add", "Create", "StoreProducts", new { @class = "btn btn-primary btn-xs", style = "width: 160px;margin-bottom: 15px; " })
</div>
<div class="">
    <table class="table table-hover table-striped table-condensed table-bordered example2" id="example2">
        <thead>
            <tr>
                <th class="col-md-1">
                    <label>Date</label>
                </th>
                <th class="col-sm-1">
                    <label>BatchName</label>
                </th>
                <th>
                    <label>Name</label>
                </th>
                <th>
                    <label>AutoGenerateName</label>
                </th>
                <th>
                    <label>Quantity</label>
                </th>
                <th class="col-md-1">

                </th>
            </tr>
        </thead>


        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductEnterDate, "ShortDate")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BatchNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AutoGenerateName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    <a href="@Url.Action("Edit","StoreProducts" , new { id = item.Id })" class="glyphicon glyphicon-pencil"></a>
                    <a href="@Url.Action("Delete","StoreProducts" , new { id = item.Id  })" class="glyphicon glyphicon-remove"></a>
                </td>
            </tr>
        }

    </table>
</div>


