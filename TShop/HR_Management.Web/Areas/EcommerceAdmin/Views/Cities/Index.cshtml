@model IEnumerable<EyePolice.Model.Models.City>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<script>
    $(document).ready(function () {
        $('#example2').DataTable({
            responsive: true,
            "iDisplayLength": 10,
            "searching": true
        });
    });
</script>

<section class="content">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Cities </h3>
            <div class="pull-right">
                @Html.ActionLink("Add", "Create", "Cities", new { @class = "btn btn-primary btn-xs custombackbutton" })
            </div>
            <hr />
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="example2" class="table table-hover table-striped table-condensed table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.State.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Code)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ZipCode)
                        </th>
                        <th>
                          Action
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.State.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ZipCode)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                    }

            </table>
        </div>
    </div>
</section>
