@model HR_Management.Models.ProductAttributeOptions

<div class="modal-header">
    <a class="close" data-dismiss="modal" aria-hidden="True">&times;</a>
    <h4 class="modal-title">Are you sure you want to delete this?</h4>
</div>

<div class="modal-body">
    <p id="MessageToClient" class="text-danger"></p>

    <dl class="dl-horizontal">
        <dt>
            <label>Attribute Name</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductsAttribute.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "deleteProductAttributeOptionForm", @class = "deleteProductAttributeOptionForm" }))
    {
        @Html.AntiForgeryToken()

        <div class="modal-footer">
            <a class="btn btn-default" data-dismiss="modal">Cancel</a>
            <input class="btn btn-primary" type="submit" value="Yes" />
        </div>
    }
</div>
