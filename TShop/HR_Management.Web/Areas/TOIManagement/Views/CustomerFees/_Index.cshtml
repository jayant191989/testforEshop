@model IEnumerable<HR_Management.Models.CustomerFees>

@{
    ViewBag.Title = "Index";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <strong>Customer Fees</strong>
    </div>
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EnrollCustomer.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DueFees)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubmitFees)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.ActionLink("Add Fee", "Create", "CustomerFees", new { enrollCustomerId = ViewBag.EnrollCustomerId, membershipId = ViewBag.MembershipId },
                new { @class = "btn btn-primary btn-xs", data_modal = "fees" })
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EnrollCustomer.FirstName)
                </td>
                <td>
                    <text>Rs.</text>    @Html.DisplayFor(modelItem => item.DueFees)
                </td>
                <td>
                 <text>Rs.</text>   @Html.DisplayFor(modelItem => item.SubmitFees)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date, "VeryLongDate")
                </td>
                <td>
                    @Html.ActionLink("Details", "Edit", "CustomerFees",
                                            new { id = item.Id }, new { @class = "btn btn-default btn-xs", data_modal = "fees" })

                    @Html.ActionLink("Delete", "Delete", "CustomerFees",
                                            new { id = item.Id }, new { @class = "btn btn-danger btn-xs", data_modal = "fees" })
                </td>
            </tr>
        }

    </table>
</div>
