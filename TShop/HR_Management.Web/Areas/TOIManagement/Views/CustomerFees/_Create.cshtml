                <div class="col-md-7">
                    <div class='input-group date' id=''>
                        @Html.EditorFor(model => model.Date, "PopUpDate")
                        @*<input type="datetime" name="Date" class="form-control" id="Date" />*@
                       
                    </div>
                </div>
