@model IEnumerable<HR_Management.Models.Branch>
@{ 
    Layout = "~/Areas/TOIManagement/Views/Shared/_Layout.cshtml";
}

<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true,
            "iDisplayLength": 100
        });
    });
</script>


<div class="box-inner">
    <div class="box-content">
        <h2>Branches List</h2>
        <hr />
        <p class="text-danger">@TempData["MessageToClient"]</p>
        <p class="text-success">@TempData["MessageToClientSuccess"]</p>

        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.ActionLink("Create Branch", "Create")
            </div>

            <div class="panel-body">
                <div class="dataTables_wrapper">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped table-condensed table-bordered" id="dataTables-example">
                            <thead>
                                <tr>                     
                                    <th>
                                        @Html.DisplayNameFor(model => model.BranchCode)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.City)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.State)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ZipCode)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tr>                                 
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BranchCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.City)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.State)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ZipCode)
                                    </td>
                                    <td>
                                        @Html.ActionLink(" ", "Edit", "Branches", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil" }) |
                                        @Html.ActionLink(" ", "Details", "Branches", new { id = item.Id }, new { @class = "glyphicon glyphicon-zoom-in" }) |
                                        @Html.ActionLink(" ", "Delete", "Branches", new { id = item.Id }, new { @class = "glyphicon glyphicon-remove" })
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





