@model IEnumerable<HR_Management.Models.LogEntry>

<div id="content" class="col-lg-10 col-sm-10">
    <h2>Log Entries</h2>
    <hr />
    <p id="MessageToClient" class="text-danger"></p>
    <p class="text-danger">@TempData["MessageToClient"]</p>

    <div class="panel panel-default">
        <div class="panel-heading">
           Audit Log
        </div>

        <div class="panel-body">
            <table class="table table-hover table-striped table-condensed table-bordered table-responsive " id="dataTables-example">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.LogDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Logger)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LogLevel)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Thread)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EntityFormalNamePlural)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EntityKeyValue)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Message)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.Exception)
                        </th>*@
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LogDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Logger)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LogLevel)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Thread)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EntityFormalNamePlural)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EntityKeyValue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Message)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.Exception)
                            </td>*@
                        <td>
                          
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>


