@model IEnumerable<HR_Management.Models.ApplicationRole>

@{ 
    ViewBag.Title = "Roles";
    Layout = "~/Areas/TOIManagement/Views/Shared/_Layout.cshtml";
}
<div id="content" class="col-lg-10 col-sm-10">
    <h2>Roles List</h2>
    <hr />
    <p id="MessageToClient" class="text-danger"></p>
    <p class="text-danger">@TempData["MessageToClient"]</p>
    <div id="getEmployeeData"></div>

    <div class="panel panel-default">
        <div class="panel-heading">
            @Html.ActionLink("Create Roles", "Create")
        </div>
        <div class="panel-body">
            <div class="dataTables_wrapper">
                <table class="table table-hover table-striped table-condensed table-bordered table-responsive " id="dataTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.ActionLink("Create New", "Create")
                            </th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

